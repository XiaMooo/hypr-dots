/*****----- Configuration -----*****/
configuration {
	modi:                       "drun,filebrowser,window";
    show-icons:                 true;
    display-drun:               "Apps";
    display-run:                "Run";
    display-filebrowser:        "Files";
    display-window:             "Windows";
	drun-display-format:        "{name}\n[<span weight='light' size='small'><i>({generic})</i></span>]";
	window-format:              "Class : {c}\nWorkspace : {w}";
}

/*****----- Global Properties -----*****/
* {
    // font:                        "CaskaydiaCove Nerd Font 20"; Source Han Sans CN 20";
    font:                        "CaskaydiaCove Nerd Font 11"; Source Han Sans CN 11";
}

/*****----- Main Window -----*****/
window {
    /* properties for window widget */
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       640px;
    x-offset:                    0px;
    y-offset:                    0px;

    /* properties for all widgets */
    enabled:                     true;
    margin:                      0px;
    padding:                     0px;
    border-radius:               10px;
    cursor:                      "default";
    background-color:            #1E1E2E;
	border:						 2px;
	border-color:				 #CBA6F7;
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    spacing:                     12px;
    padding:                     15px;
    background-color:            transparent;
    children:                    [ "inputbar", "mode-switcher", "listview" ];
}

/*****----- Inputbar -----*****/
inputbar {
    enabled:                     true;
    spacing:                     10px;
    margin:                      0px;
    background-color:            transparent;
    children:                    [ "textbox-prompt-colon", "entry" ];
}

textbox-prompt-colon {
    enabled:                     true;
    expand:                      false;
    padding:                     12px 16px;
    border:                      0px;
    border-radius:               10px;
    border-color:                gray/30%;
    background-color:            gray/15%;
    text-color:                  #A6ADC8;
    str:                         "ï€‚";
}
entry {
    enabled:                     true;
    padding:                     12px 16px;
    border:                      0px;
    border-radius:               10px;
    border-color:                gray/30%;
    background-color:            gray/15%;
    text-color:                  #A6ADC8;
    cursor:                      text;
    placeholder:                 "Search...";
    placeholder-color:           inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    columns:                     2;
    lines:                       5;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    
    spacing:                     4px;
    background-color:            transparent;
    cursor:                      "default";
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    spacing:                     5px;
    margin:                      0px;
    padding:                     2px;
    border:                      0px solid;
    border-radius:               10px;
    background-color:            transparent;
    text-color:                  #B6BDD8;
    cursor:                      pointer;
}
element normal.active {
    background-image:            linear-gradient(to right, #FF9030, #FFC99B);
    // text-color:                  #F38BA8;
    text-color:                  black;
}
element selected.normal {
    border-radius:               10px;
    background-image:            linear-gradient(to right, #F9E2AF, #F5E0DC);
    text-color:                  black;
}
element selected.active {
    background-image:            linear-gradient(to right, #F9E2AF, #F5E0DC);
    text-color:                  black;
    // background-image:            linear-gradient(to right, #EA5553, #EAACAB);
    // text-color:                  black;
}
element-icon {
    background-color:            transparent;
    size:                        48px;
    cursor:                      inherit;
}
element-text {
    background-color:            inherit;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}

/*****----- Mode Switcher -----*****/
mode-switcher{
    enabled:                     true;
    expand:                      false;
    spacing:                     15px;
    background-color:            transparent;
}
button {
    font:                        "CaskaydiaCove Nerd Font Bold 6";
    padding:                     12px;
    border-radius:               100%;
    // background-image:            linear-gradient(to right, #C03FF2, #EEC2FF);
	// background-color:			 #B4BEFE;
    // text-color:                  #1E1E2E;
	background-color:			 #45475A;
    text-color:                  #B6BDD8;
    cursor:                      pointer;
}
button selected {
    // background-image:            linear-gradient(to right, #44A2F0, #BDDDF8);
	// background-color:			 #94E2D5;
    // text-color:                  black;
	background-color:			 #B4BEFE;
    text-color:                  #1E1E2E;
}

/*****----- Message -----*****/
error-message {
    padding:                     10px;
    background-color:            white;
    text-color:                  black;
}
textbox {
    padding:                     0px;
    border-radius:               10px;
    text-color:                  black;
    vertical-align:              0.5;
    horizontal-align:            0.0;
}
